<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/transport_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/pp_dp_8">

        <ImageView
            android:id="@+id/transport_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_shop" />

        <TextView
            android:id="@+id/transport_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pp_dp_16"
            android:text="@string/transport"
            android:textColor="@color/pp_dark_blue"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <View
        android:id="@+id/pickup_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pp_dp_1"
        android:background="@color/pp_light_gray_normal" />

    <ListView
        android:id="@+id/transport_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:padding="@dimen/pp_dp_8"
        android:scrollbars="none"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/shop_coupon_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/coupon_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_dp_1"
            android:layout_marginLeft="@dimen/pp_dp_16"
            android:background="@color/pp_light_gray_normal" />

        <LinearLayout
            android:id="@+id/coupon_title_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/pp_dp_8">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_coupon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pp_dp_16"
                android:text="@string/coupon"
                android:textColor="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_14" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/pp_dp_1"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/arrow_coupon_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/pp_dp_8"
                android:src="@drawable/arrow_coupon" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_dp_1"
            android:background="@color/pp_light_gray_normal" />

        <LinearLayout
            android:id="@+id/coupon_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pp_dp_8"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/coupon_count_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pp_dp_8"
                android:layout_marginRight="@dimen/pp_dp_16"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/coupon"
                    android:textColor="@color/pp_dark_blue"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/arrow_coupon_iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/arrow_coupon"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/coupon_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/pp_dp_8"
                    android:text="@string/coupon_count"
                    android:textColor="@color/pp_dark_blue"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <View
                android:visibility="gone"
                android:id="@+id/line_below_coupon"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/pp_dp_16"
                android:background="@color/pp_light_gray_normal" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/invoice_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/pp_dp_8"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/pp_dp_8"
                android:paddingBottom="@dimen/pp_dp_8">

                <ImageView
                    android:id="@+id/invoice_rl_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/submit_invoce" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/pp_dp_20"
                    android:layout_toRightOf="@id/invoice_rl_iv"
                    android:text="@string/invoice"
                    android:textColor="@color/pp_dark_blue"
                    android:textSize="@dimen/text_size_14" />

                <ImageView
                    android:id="@+id/arrow_invoice_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_coupon" />
            </RelativeLayout>

            <View
                android:id="@+id/line_below_invoice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_dp_1"
                android:background="@color/pp_light_gray_normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pp_dp_16"
                android:layout_marginRight="@dimen/pp_dp_16"
                android:layout_marginTop="@dimen/pp_dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shop_price"
                    android:textColor="@color/pp_gray"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/shop_price_unit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/shop_price_tv"
                    android:text="$"
                    android:textColor="@color/pp_gray"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/shop_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/pp_dp_5"
                    android:text="0"
                    android:textColor="@color/pp_gray"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/coupon_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pp_dp_16"
                android:layout_marginRight="@dimen/pp_dp_16"
                android:layout_marginTop="@dimen/pp_dp_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/coupon_price"
                    android:textColor="@color/pp_gray"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/coupon_subtract_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/coupon_price_unit_tv"
                    android:text="-"
                    android:textColor="@color/pp_red"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/coupon_price_unit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pp_dp_5"
                    android:layout_toLeftOf="@+id/coupon_price_tv"
                    android:text="$"
                    android:textColor="@color/pp_red"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/coupon_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/pp_dp_5"
                    android:text="0"
                    android:textColor="@color/pp_red"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/discount_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pp_dp_16"
                android:layout_marginRight="@dimen/pp_dp_16"
                android:layout_marginTop="@dimen/pp_dp_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discount_price"
                    android:textColor="@color/pp_gray"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/discount_subtract_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/discount_price_unit_tv"
                    android:text="-"
                    android:textColor="@color/pp_gray"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/discount_price_unit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pp_dp_5"
                    android:layout_toLeftOf="@+id/discount_price_tv"
                    android:text="$"
                    android:textColor="@color/pp_gray"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/discount_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/pp_dp_5"
                    android:text="0"
                    android:textColor="@color/pp_gray"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/invoice_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pp_dp_16"
                android:layout_marginRight="@dimen/pp_dp_16"
                android:layout_marginTop="@dimen/pp_dp_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invoice_price"
                    android:textColor="@color/pp_gray"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/invoice_subtract_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/invoice_price_unit_tv"
                    android:text="-"
                    android:textColor="@color/pp_red"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/invoice_price_unit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pp_dp_5"
                    android:layout_toLeftOf="@+id/invoice_price_tv"
                    android:text="$"
                    android:textColor="@color/pp_red"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/invoice_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/pp_dp_5"
                    android:text="0"
                    android:textColor="@color/pp_red"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pp_dp_16"
                android:layout_marginRight="@dimen/pp_dp_16"
                android:layout_marginTop="@dimen/pp_dp_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pay_price"
                    android:textColor="@color/pp_gray"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/pay_price_unit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/pay_price_tv"
                    android:text="$"
                    android:textColor="@color/pp_gray"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/pay_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/pp_dp_5"
                    android:text="0"
                    android:textColor="@color/pp_gray"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_dp_1"
            android:layout_marginTop="@dimen/pp_dp_16"
            android:background="@color/pp_light_gray_normal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_agreement"
                android:layout_width="20dp"
                android:layout_height="41dp"
                android:layout_marginLeft="8dp"
                android:paddingBottom="@dimen/pp_dp_13"
                android:paddingRight="5dp"
                android:paddingTop="@dimen/pp_dp_13"
                android:src="@drawable/gender_normal" />

            <TextView
                android:id="@+id/tv_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pp_dp_13"
                android:layout_toRightOf="@+id/iv_agreement"
                android:paddingBottom="2dp"
                android:text="@string/smssdk_explain_briefly"
                android:textColor="@color/pp_blue"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_special_good"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_agreement"
                android:layout_toRightOf="@+id/iv_agreement"
                android:paddingBottom="8dp"
                android:text="@string/special_goods"
                android:textColor="@color/pp_blue"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
