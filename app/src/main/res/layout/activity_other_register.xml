<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_parent"
    style="@style/ImmersiveMode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_register_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topLeftView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/pp_top_bar_height"
        android:gravity="center_vertical"
        android:onClick="TopViewClick"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/topLeft_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/pp_dp_15"
            android:layout_marginLeft="@dimen/pp_dp_14"
            android:layout_marginRight="@dimen/pp_dp_14"
            android:layout_marginTop="@dimen/pp_dp_15"
            android:clickable="false"
            android:scaleType="centerInside"
            android:src="@drawable/back_white" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/other_register_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/smssdk_regist"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_ll"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:layout_marginLeft="@dimen/pp_dp_20"
                android:layout_marginRight="@dimen/pp_dp_16"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/pp_dp_20"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/pp_dp_5"
                    android:paddingRight="@dimen/pp_dp_5">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/pp_dp_10"
                        android:adjustViewBounds="true"
                        android:src="@drawable/login_email" />

                    <com.pictureair.hkdlphotopass.widget.EditTextWithClear
                        android:id="@+id/other_sign_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/pp_dp_10"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/email"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:maxLength="200"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pp_px_1"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pp_dp_30"
                    android:layout_marginTop="@dimen/pp_dp_30"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/pp_dp_5"
                    android:paddingRight="@dimen/pp_dp_5">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/pp_dp_10"
                        android:adjustViewBounds="true"
                        android:src="@drawable/login_code" />

                    <com.pictureair.hkdlphotopass.widget.EditTextWithClear
                        android:id="@+id/other_sign_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/pp_dp_10"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/pwd"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:maxLength="200"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/text_size_16" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pp_px_1"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pp_dp_30"
                    android:layout_marginTop="@dimen/pp_dp_30"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/pp_dp_5"
                    android:paddingRight="@dimen/pp_dp_5">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/pp_dp_10"
                        android:adjustViewBounds="true"
                        android:src="@drawable/login_code" />

                    <com.pictureair.hkdlphotopass.widget.EditTextWithClear
                        android:id="@+id/other_sign_password2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/pp_dp_10"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/smssdk_pwd2"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:maxLength="200"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/text_size_16" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pp_px_1"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pp_dp_30"
                    android:layout_marginTop="@dimen/pp_dp_30"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/pp_dp_5"
                    android:paddingRight="@dimen/pp_dp_5">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/pp_dp_10"
                        android:adjustViewBounds="true"
                        android:src="@drawable/login_nn" />

                    <com.pictureair.hkdlphotopass.widget.EditTextWithClear
                        android:id="@+id/other_sign_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/pp_dp_10"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/nn"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLength="200"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pp_px_1"
                    android:background="@color/white" />

                <Button
                    android:id="@+id/btn_other_sign_submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pp_dp_40"
                    android:layout_marginTop="@dimen/pp_dp_20"
                    android:background="@drawable/button_white_shape_and_selector"
                    android:padding="10dp"
                    android:text="@string/sign"
                    android:textColor="@drawable/textview_selector_white_other"
                    android:textSize="@dimen/text_size_16" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_agreement"
                        android:layout_width="20dp"
                        android:layout_height="41dp"
                        android:paddingBottom="@dimen/pp_dp_13"
                        android:paddingRight="5dp"
                        android:paddingTop="@dimen/pp_dp_13"
                        android:src="@drawable/login_check_unselect" />

                    <TextView
                        android:id="@+id/tv_agreement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_toRightOf="@+id/iv_agreement"
                        android:gravity="center"
                        android:text="@string/smssdk_explain_briefly"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_agreement_personal"
                        android:layout_width="20dp"
                        android:layout_height="41dp"
                        android:paddingBottom="@dimen/pp_dp_13"
                        android:paddingRight="5dp"
                        android:paddingTop="@dimen/pp_dp_13"
                        android:src="@drawable/login_check_unselect" />

                    <com.pictureair.hkdlphotopass.widget.CustomTextView
                        android:id="@+id/tv_explain_personal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_toRightOf="@+id/iv_agreement_personal"
                        android:gravity="center"
                        android:text="@string/smssdk_personal_information_collection_statement"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </ScrollView>
    <!-- 内容 -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/pp_dp_10"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/pp_dp_20"
            android:text="@string/country"
            android:textColor="@color/pp_dark_blue"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/other_sign_country"
            android:layout_width="@dimen/pp_dp_150"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/textedit"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="@dimen/pp_dp_5"
            android:textColor="@color/pp_gray"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/pp_dp_10"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/pp_dp_20"
            android:text="@string/gender"
            android:textColor="@color/pp_dark_blue"
            android:textSize="@dimen/text_size_16" />

        <RadioGroup
            android:id="@+id/rg_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_btn_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/readio_group_sex_readio_button"
                android:drawablePadding="@dimen/pp_dp_5"
                android:text="@string/male"
                android:textColor="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_16" />

            <RadioButton
                android:id="@+id/rb_btn_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/pp_dp_20"
                android:background="@color/transparent"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/readio_group_sex_readio_button"
                android:drawablePadding="@dimen/pp_dp_5"
                android:text="@string/female"
                android:textColor="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_16" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/pp_dp_10"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/pp_dp_5"
            android:text="@string/date_of_birth"
            android:textColor="@color/pp_dark_blue"
            android:textSize="@dimen/text_size_16" />

        <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="1dp"
            android:text="@string/year"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_small_size" /> -->

        <TextView
            android:id="@+id/other_sign_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/pp_dp_10"
            android:layout_marginRight="@dimen/pp_dp_10"
            android:background="@drawable/textedit"
            android:gravity="center"
            android:hint="YYYY"
            android:maxLines="1"
            android:paddingBottom="@dimen/pp_dp_5"
            android:textColor="@color/pp_gray"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="-"
            android:textColor="@color/pp_dark_blue"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/other_sign_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/pp_dp_10"
            android:layout_marginRight="@dimen/pp_dp_10"
            android:background="@drawable/textedit"
            android:gravity="center"
            android:hint="MM"
            android:paddingBottom="@dimen/pp_dp_5"
            android:textColor="@color/pp_gray"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="-"
            android:textColor="@color/pp_dark_blue"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/other_sign_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/pp_dp_10"
            android:layout_marginRight="@dimen/pp_dp_10"
            android:background="@drawable/textedit"
            android:gravity="center"
            android:hint="DD"
            android:paddingBottom="@dimen/pp_dp_5"
            android:textColor="@color/pp_gray"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>
    <!-- 年月日选择 -->

</LinearLayout>