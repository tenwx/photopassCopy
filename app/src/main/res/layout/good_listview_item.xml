<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/pp_dp_20"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/pp_dp_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pp_dp_10"
        android:layout_marginRight="@dimen/pp_dp_10">

        <com.pictureair.hkdlphotopass.widget.CustomTextView
            android:id="@+id/good_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/pp_dp_20"
            android:textColor="@color/pp_blue"
            android:textSize="@dimen/text_size_16" />

        <com.pictureair.hkdlphotopass.widget.CustomTextView
            android:id="@+id/good_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pp_blue"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

        <com.pictureair.hkdlphotopass.widget.CustomTextView
            android:id="@+id/good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pp_blue"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/goodDetailIntroduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pp_dp_10"
        android:layout_marginLeft="@dimen/pp_dp_10"
        android:layout_marginRight="@dimen/pp_dp_10"
        android:layout_marginTop="@dimen/pp_dp_5"
        android:textColor="@color/pp_light_gray_press" />

    <ImageView
        android:id="@+id/goodImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
         />
</LinearLayout>